{
  "name": "blogger-prototype-processor",
  "version": "0.0.0",
  "description": "GCP-based Express application with Pub/Sub integration",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc -p tsconfig.json",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "debug": "node --inspect -r ts-node/register src/index.ts",
    "debug:brk": "node --inspect-brk -r ts-node/register src/index.ts",
    "debug:docker": "node --inspect=0.0.0.0:9229 -r ts-node/register src/index.ts",
    "docker:build": "docker build -t blogger-processor:local .",
    "docker:run": "docker run -p 8080:8080 --env-file .env blogger-processor:local",
    "docker:dev": "docker-compose up",
    "docker:debug": "docker-compose up",
    "deploy:cloud-run": "gcloud builds submit --config cloudbuild.yaml",
    "deploy:manual": "docker build -t gcr.io/$(gcloud config get-value project)/blogger-processor:latest . && docker push gcr.io/$(gcloud config get-value project)/blogger-processor:latest && gcloud run deploy blogger-processor --image gcr.io/$(gcloud config get-value project)/blogger-processor:latest --platform managed --region us-central1 --allow-unauthenticated"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "keywords": [
    "express",
    "gcp",
    "node",
    "typescript",
    "pubsub",
    "firestore",
    "docker",
    "cloud-run"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google-cloud/firestore": "^7.5.0",
    "@google-cloud/logging": "^11.0.0",
    "@google-cloud/pubsub": "^4.3.1",
    "@google-cloud/storage": "^7.7.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "openai": "^4.89.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
